// [ns]
parameter STEP = <%=$step.ceil%>;

parameter HFPORCH = <%=$hfporch%>;
parameter HSYNCL  = <%=$hsyncl%>;
parameter HBPORCH = <%=$hbporch%>;
parameter HVIDEO  = <%=$hvideo%>;
parameter HMAX    = HFPORCH + HSYNCL + HBPORCH + HVIDEO;

parameter VFPORCH = <%=$hfporch%>;
parameter VSYNCL  = <%=$hsyncl%>;
parameter VBPORCH = <%=$hbporch%>;
parameter VVIDEO  = <%=$hvideo%>;
parameter VMAX    = VFPORCH + VSYNCL + VBPORCH + VVIDEO;

function integer clogb2 (input integer bit_depth);
  begin
    for(clogb2=0; bit_depth>0; clogb2=clogb2+1)
      bit_depth = bit_depth >> 1;
  end
endfunction

